@page
@model FinalProject.Pages.DeleteEmailModel

@{
    ViewData["Title"] = "Delete Email";
}

<h2>Delete Email</h2>

<p>Are you sure you want to delete this email?</p>

<form method="post">
    <div>
        <input type="hidden" asp-for="EmailID" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
